<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".view.fragment.MovieFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </com.stx.xhb.xbanner.XBanner>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#1c2243"
            android:layout_height="38dp">

            <ImageView
                android:layout_width="19dp"
                android:src="@mipmap/zzry"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="9dp"
                android:layout_height="20sp" />

            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="56dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:text="正在热映"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/zzsy"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="200dp"
                android:text="更多"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_zzry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#1c2243"
            android:layout_height="38dp">

            <ImageView
                android:layout_width="19dp"
                android:src="@mipmap/jjsy"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="9dp"
                android:layout_height="20sp" />

            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="56dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:text="即将上映"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/jjsy"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="200dp"
                android:text="更多"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_jjsy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#1c2243"
            android:layout_height="38dp">

            <ImageView
                android:layout_width="19dp"
                android:src="@mipmap/rmdy"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="9dp"
                android:layout_height="20sp" />

            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="56dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:text="热门电影"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/rmdy"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="200dp"
                android:text="更多"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_rmdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</ScrollView>